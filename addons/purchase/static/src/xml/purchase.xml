<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="purchase.Search_Table">
      <div id="main">
	<div id="bom_menu">
	  <button id="gvm_save" class="btn btn-sm oe_highlight">저장/수정</button>
	  <button id="gvm_purchase_order" class="btn btn-sm btn-default">발주</button>
	  <button id="detail_product_get" class="btn btn-sm">수정이력보기</button>
	  <span style='font-size:10px;'>상태: A-정상,  B-가공불량, C-설계불량, D-작업자파손, E-구매불량, F-분실, G-업체미스, H-삭제</span>
	</div>
	  <button id="gvm_quick_create" class="btn btn-sm" style="display:none;float:right;">유닛,파트 관리</button><br/>
	<div>
          프로젝트 : <input type="text" autocomplete="off" id="gvm_search_product" width="100px" placeholder="Select" class="bom_search"/>
          유닛 : <select id="gvm_search_product_part" width="100px">
	    <option></option>
	  </select>
	</div>  
	<div id="mytable" style="margin:10px"></div>
	    <button id="add_product" class="btn btn-sm">+</button>
    </div>
    </t>
</templates>
